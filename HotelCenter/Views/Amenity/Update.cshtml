@model AmenityVM
<div class="w-100 border-0 card p4">
    <div class="card-header bg-gradient bg-success m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">İmkan veya Hizmet Düzenle</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row">
            <input hidden asp-for="Amenity.Id"/>
            <div class="p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.Amenity.HotelId" asp-items="@Model.HotelList" class="form-select border shadow">
                        <option disabled selected>--Bungalov Seçin--</option>
                    </select>
                    <label asp-for="Amenity.HotelId" class="ms-2">Id</label>
                    <span asp-validation-for="Amenity.HotelId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Amenity.Name" class="form-control border shadow" />
                    <label asp-for="Amenity.Name" class="ms-2">İsim</label>
                    <span asp-validation-for="Amenity.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Amenity.Description" class="form-control border shadow" />
                    <label asp-for="Amenity.Description" class="ms-2">Açıklama</label>
                    <span asp-validation-for="Amenity.Description" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Kaydet
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}