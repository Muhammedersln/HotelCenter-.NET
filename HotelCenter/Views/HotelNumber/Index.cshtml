@model IEnumerable<HotelNumber>


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-gradient bg-success m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Otel Numara Listesi</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end mb-2">
                <a asp-controller="HotelNumber" asp-action="Create" class="btn btn-secondary"><i class="bi bi-plus-circle"></i> Yeni Otel Ekle</a>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Otel Adı</th>
                        <th>Otel Numarası</th>
                        <th>Açıklama</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HotelId</td>
                            <td>@item.Hotel_Number</td>
                            <td>@item.SpecialDetails</td>
                            <td>
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="HotelNumber" asp-action="Update" asp-route-hotelNumberId="@item.Hotel_Number" class="btn btn-success mx-2"><i class="bi bi-pencil-square"></i> Düzenle</a>
                                    <a asp-controller="HotelNumber" asp-action="Delete" asp-route-hotelNumberId="@item.Hotel_Number" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Sil</a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

